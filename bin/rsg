#!/usr/bin/env ruby
#********** Copyright 2017 REDspace. All Rights Reserved. **********

require "byebug"

require "optparse"
require "rsg_doc"

options = {}
OptionParser.new do |opts|

  opts.on("-v", "--verbose", "Run verbosely") do
    options[:verbose] = true
  end

  opts.on("-i", "--index", "Generate index") do
    options[:index] = true
  end

end.parse!

include RSGDoc
doc = Docgen.new(options: options)
if options[:index]
  doc.generateIndex
else
  doc.generate
end