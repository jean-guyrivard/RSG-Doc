#!/usr/bin/env ruby
#********** Copyright 2017 REDspace. All Rights Reserved. **********

require "byebug"

require "optparse"
require "rsg_doc"

options = {}
OptionParser.new do |opts|

  opts.on("-v", "--verbose", "Run verbosely") do
    options[:verbose] = true
  end

end.parse!

include RSGDoc
Docgen.new(options: options).generate